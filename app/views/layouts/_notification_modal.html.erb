<div
  data-controller="notification"
  data-notification-target="modal"
  id="notification-modal"
  class="z-10 hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full"
>
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <button
      data-action="click->notification#closeModal"
      class="text-red-400 float-right"
    >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
      </svg>
    </button>
    <div class="mt-3">
      <h3 class="text-lg text-center leading-6 font-medium text-gray-900">Notifications</h3>
      <div class="mt-2">
        <div id="notification-template-card" class="notification-item hidden justify-between items-center bg-gray-100 p-4 rounded-lg shadow-md">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
            </svg>

            <div class="ml-4 text-left">
              <p class="text-sm text-gray-700">
                <span class="notification-message font-bold">
                </span>
              </p>
              <p class="text-xs text-gray-500 mt-1">
                <span class="notification-time font-bold">
                </span>
              </p>
            </div>
          </div>

          <button data-action="click->notification#markHidden">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <!-- Notification Cards -->
        <div id="notification-card-container" class="space-y-4">
          <% notifications.each do |notification| %>
            <div data-id="<%= notification.id %>" class="notification-item flex justify-between items-center bg-gray-100 p-4 rounded-lg shadow-md">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
                </svg>

                <div class="ml-4 text-left">
                  <p class="text-sm text-gray-700">
                    <span class="font-bold">
                      <%= notification.message %>
                    </span>
                  </p>
                  <p class="text-xs text-gray-500 mt-1">
                    <span class="font-bold">
                      <%= notification.created_at.strftime('%m/%d/%Y %I:%M%p') %>
                    </span>
                  </p>
                </div>
              </div>

              <button
                data-action="click->notification#markHidden"
                data-notification-hide-id-param="<%= notification.id %>"
              >
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
